

  <div class="card-trip">
    <% if item.main_photo.attached? %>
    <%= cl_image_tag item.main_photo.key, crop: :fill, class:"card-picture" %>
    <% end %>

    <% if current_page?(bookings_path) %>
        <%= link_to edit_item_path(item) do %>
        <i class="far fa-edit icon-placement"></i>
        <% end %>
        <%= link_to item_path(item),  method: :delete,
            data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= item.title.capitalize %></h2>
      </div>
      <h2 class="card-trip-pricing"><%= "#{item.price} â‚¬"%></h2>
      <%= cl_image_tag item.user.photo.key, crop: :fill, class: "card-trip-user avatar-bordered" %>
    </div>
  </div>
