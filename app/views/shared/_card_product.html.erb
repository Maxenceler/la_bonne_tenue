  <div class="card-product">
    <%= cl_image_tag booking.item.photos.first.key, crop: :fill, class:"card-picture" %>
    <div class="card-product-infos">
      <h2><%= booking.item.title.capitalize %></h2>
      <p><%="Date de dÃ©but : #{booking.beginning_date}" %></p>
      <p><%= "Date de fin : #{booking.ending_date}" %></p>
      <p><%= "#{booking.status}" %></p>
      <% if booking.status == "pending" %>
      <%= link_to "Accepter", booking_path(booking, status: "accepted" ), method: :patch, class: "accepted" %>
