<div id="mainpageproduct">
  <div class="containerproduct">

    <div class="typoFine">
	    <ol class="breadcrumb">
            <li><a href="/">Accueil</a></li>
             <li><a href="/produits/"> Produits </a></li>
             <li><a href="/produits/robes/"> Robes </a></li>
             <li><p><%= @item.title%></p></li>
      </ol>
    </div>

    <div class="ficheProduit">
	    <h1 class="nom-produit"> <%= @item.title%> </h1>

      <div class="d-flex">
        <div class="d-flex flex-column ">
          <%= cl_image_tag @item.photos.last.key, height: 250, crop: :fill %>
          <%= cl_image_tag @item.photos.second.key, height: 250, crop: :fill %>
          <%= cl_image_tag @item.photos.third.key, height: 250, crop: :fill %>
        </div>
          <%= cl_image_tag @item.photos.first.key, crop: :fill, height: 630 %>


      <div class="d-flex flex-column"></div>
        <div class="infos-produit">
          <div class="blocBeigeProduit bloc-info-produit" style="height: 48px; min-height: 62px;">
            <%= @item.size%>
          </div>

          <div class="prix bloc-info-produit" style="min-height: 62px;">
            <p><%= @item.price%>€</p>
          </div>

          <div id="addBasket">
            <%= simple_form_for [ @item, @booking ] do |f| %>
            <%= f.submit “Louer”, class: “pink-button” %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
